@model TEKA.Models.AddKey
@{
    var lkey = (List<TEKA.Models.AspNetUser>)TempData["ktv"];
}

<style>
    .form-group {
        margin-bottom: 15px;
    }

    button {
        margin-top: 15px;
    }

    select {
        max-width: 280px;
    }

    .form-control {
        max-width: 280px;
    }
</style>
@using (Html.BeginForm("AddKTVConfirm", "Warranti"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-center">@Resources.Resources.choose_ktv</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.Label(Resources.Resources.technicians, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownListFor(model => model.IdKTV, new SelectList(lkey, "Id", "UserName"),
               new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdKTV, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label(Resources.Resources.deadline, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Deadline, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control", @required = "required" })
                @Html.ValidationMessageFor(model => model.Deadline, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="text-center">
                <button type="submit" class="btn btn-warning"><i class="glyphicon glyphicon-ok"></i> @Resources.Resources.success</button>
            </div>
        </div>
    </div>
}
