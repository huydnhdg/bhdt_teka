@model List<TEKA.Models.Article>


<div class="slide">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.Count; i++)
            {
                if (i == 0)
                {
                    <li data-target="#carousel-example-generic" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#carousel-example-generic" data-slide-to="@i"></li>
                }
            }
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            @for (int i = 0; i < Model.Count; i++)
                {
                    if (i == 0)
                    {
                        <div class="item active">
                            <a href="@Model[i].Alt" title="@Model[i].Title">
                                <img src="@Model[i].Image" alt="@Model[i].Title" class="img-responsive" style="width:100%">
                            </a>

                            <div class="carousel-caption">
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="item">
                            <a href="@Model[i].Alt" title="@Model[i].Title">
                                <img src="@Model[i].Image" alt="@Model[i].Title" class="img-responsive" style="width:100%">
                            </a>

                            <div class="carousel-caption">
                            </div>
                        </div>
                    }
                }
            @*<div class="item active">
                <a href="" title="">
                    <img src="~/Image/slide.png" alt="" class="img-responsive" style="width:100%">
                </a>

                <div class="carousel-caption">
                </div>
            </div>
            <div class="item">
                <a href="" title="">
                    <img src="~/Image/slide.png" alt="" class="img-responsive" style="width:100%">
                </a>

                <div class="carousel-caption">
                </div>
            </div>*@
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev" style="background-image:none; opacity:unset;width:auto;top:35%;">
            @*<span class="glyphicon " aria-hidden="true"><p>‹</p></span>*@
            @*<span class="sr-only">Previous</span>*@
            <img src="~/Image/teka2_05.png"  class="btn-next"/>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next" style="background-image:none; opacity:unset;width:auto;top:35%;">
            @*<span class="glyphicon " aria-hidden="true"><p>›</p></span>*@
            @*<span class="sr-only">Next</span>*@
            <img src="~/Image/teka2_07.png"  class="btn-next"/>
        </a>
    </div>
</div>
