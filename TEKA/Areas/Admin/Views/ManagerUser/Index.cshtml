@model PagedList.IPagedList<TEKA.Models.AspNetUser>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Manage";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int index = 0;
}
    <div class="row">
        <div class="col-lg-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <form class="forms-sample">
                        <div class="form-group row">
                            <label for="" class="col-sm-3 col-form-label">@Resources.Resources.account</label>
                            <div class="col-sm-9">
                                <div class="form-group">
                                    <div class='input-group date' id="name">
                                        @Html.TextBox("s1", ViewBag.c1 as string, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-outline-primary btn-fw">
                            <i class="mdi mdi-magnify"></i>@Resources.Resources.search
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Email</th>
                                    <th>@Resources.Resources.cus_phone</th>
                                    <th>@Resources.Resources.account</th>
                                    <th>@Resources.Resources.cus_name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <br />
                                            @Html.ActionLink("Edit Role", "EditRole", new { id = item.Id }) <br />
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })<br />
                                            <a href="/Admin/Account/ResetPassword?Code=@item.Id">Reset password</a>
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                        <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

<ul class="pagination">
    @Html.Raw((String)ViewBag.PagingHtml)
</ul>

