@model TEKA.Models.SentNotifi
@{
    ViewBag.Title = "Sent";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .form-group {
        margin-bottom: 5px;
    }

    .msg {
        line
    }
</style>
<div class="row">
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" action="/admin/sentnotifi/sent" method="post">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">@Resources.Resources.content</label>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.TextAreaFor(model => model.Message, new { @class = "form-control msg", @rows = "5" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <button class="btn btn-primary" type="submit">
                                    <i class="mdi mdi-send"></i>Send all
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-6">
                            @if (ViewBag.msg != null)
                            {
                                <p class="text-success">@ViewBag.msg</p>
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

