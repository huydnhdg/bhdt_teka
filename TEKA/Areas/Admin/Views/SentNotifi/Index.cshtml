@model PagedList.IPagedList<TEKA.Models.User_Device>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Sent";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int index = 0;
}
<style>
    .form-group{1
        margin-bottom:5px;
    }
</style>
<div class="row">
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group row">
                        <label for="" class="col-sm-3 col-form-label">@Resources.Resources.search</label>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <div class='input-group date' id="name">
                                    @Html.TextBox("s1", ViewBag.c1 as string, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label for="" class="col-sm-3 col-form-label">Provider</label>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <div class='input-group date' id="status">
                                    <select class="form-control" id="s2" name="s2">
                                        <option value="">@Resources.Resources.all</option>
                                        <option value="android">android</option>
                                        <option value="ios">ios</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="" class="col-sm-3 col-form-label">@Resources.Resources.createdate</label>
                        <div class="col-sm-6">
                            <div class="col-sm-6 row">
                                <div class="form-group">
                                    <div class='input-group date' id="tungay">
                                        @Html.TextBox("s4", ViewBag.c4 as string, new { @class = "form-control" })
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 row">
                                <div class="form-group">
                                    <div class='input-group date' id="denngay">
                                        @Html.TextBox("s5", ViewBag.c5 as string, new { @class = "form-control" })
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-outline-primary btn-fw">
                        <i class="mdi mdi-magnify"></i>@Resources.Resources.search
                    </button>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="/Admin/SentNotifi/Sent" class="btn btn-outline-info btn-fw">
                            <i class="mdi mdi-send"></i>Send all
                        </a>
                    }
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="mytable">
                        <thead style="background-color:aqua">
                            <tr>
                                <th>UserName</th>
                                <th>Provider</th>
                                <th>Createdate</th>
                                <th>Device</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.Provider</td>
                                    <td>@item.Createdate.Value.ToString("dd/MM/yyyy")</td>
                                    <td style="max-width: 200px">@item.DeviceId</td>
                                    <td></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, c1 = ViewBag.c1, c2 = ViewBag.c2, c3 = ViewBag.c3, c4 = ViewBag.c4, c5 = ViewBag.c5, c6 = ViewBag.c6 }))

