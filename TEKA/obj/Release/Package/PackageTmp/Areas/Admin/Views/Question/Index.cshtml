@model IEnumerable<TEKA.Models.Article>
@{
    ViewBag.Title = "Config";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int index = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>@Resources.Resources.index</th>
                                <th>@Resources.Resources.title</th>
                                <th>@Resources.Resources.war_note</th>
                                <th>@Resources.Resources.photo</th>
                                <th>Link</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                index++;
                                <tr>
                                    <td>
                                        @if (!User.IsInRole("Mod"))
                                        {
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                        }
                                        </td>
                                    <td>@index</td>
                                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td><img style="width:50px;height:50px;" src="@(item.Image == null ? "" : item.Image)" alt="" /></td>
                                    <td>@Html.DisplayFor(modelItem => item.Url)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<ul class="pagination">
    @Html.Raw((String)ViewBag.PagingHtml)
</ul>