@using TEKA.Areas.Admin
@model LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="error">
    <div>
        <h1 class="text-center text-uppercase">@Resources.Resources.login</h1>
        @*<p class="text-justify">Vui lòng đăng nhập theo form dưới đây.</p>*@
    </div>
    <div style="text-align:center;margin: 15px 0;"><img src="~/Image/teka3_03.png" alt="" /></div>
    @using (Html.BeginForm("Index", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <table>
            <tr>
                <td><label>@Resources.Resources.account</label></td>
                <td>
                    <div class="form-group">
                        <div class="">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-group" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td><label>@Resources.Resources.password</label></td>
                <td>
                    <div class="form-group">

                        <div class="">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-group" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <div class="form-group">
                        <input type="submit" value="@Resources.Resources.login" class="btn" />
                    </div>
                </td>
            </tr>
        </table>
    }
    <div style="text-align:center;margin: 15px 0;"><img src="~/Image/teka3_03.png" alt="" /></div>
</section>